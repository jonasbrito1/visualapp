# =============================================
# VISUALAPP - Environment Variables
# =============================================
# Copie este arquivo para .env e preencha os valores

# ---- Database ----
DATABASE_URL="postgresql://visualapp:visualapp_secret@localhost:5480/visualapp_db?schema=public"

# ---- Redis ----
REDIS_URL="redis://localhost:6399"

# ---- NextAuth (Web App) ----
NEXTAUTH_URL="http://localhost:3100"
NEXTAUTH_SECRET="change-this-to-a-random-secret-min-32-chars"

# ---- NextAuth (Admin App) ----
NEXTAUTH_URL_ADMIN="http://localhost:3110"
NEXTAUTH_SECRET_ADMIN="change-this-to-another-random-secret-min-32"

# ---- MinIO (Storage) ----
MINIO_ENDPOINT="localhost"
MINIO_PORT="9100"
MINIO_ACCESS_KEY="visualapp_minio"
MINIO_SECRET_KEY="visualapp_minio_secret"
MINIO_BUCKET="visualapp"
MINIO_USE_SSL="false"

# ---- Claude AI (Anthropic) ----
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# ---- Payment (Stripe) ----
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ---- App ----
NEXT_PUBLIC_APP_URL="http://localhost:3100"
NEXT_PUBLIC_ADMIN_URL="http://localhost:3110"
NEXT_PUBLIC_APP_NAME="VisualApp"
